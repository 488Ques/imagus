    "kysely-codegen": "^0.18.5",
    "kysely-ctl": "^0.15.1"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "daisyui": "^5.1.10",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "hono": "^4.9.1",
    "kysely": "^0.28.5",
    "pg": "^8.16.3",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.13",
    "valibot": "^1.1.0"
